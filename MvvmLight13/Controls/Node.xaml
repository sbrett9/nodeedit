<UserControl x:Class="MvvmLight13.Controls.OperationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MvvmLight13.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid x:Name="chevgrid" Grid.Row="0" >
        <ContentControl x:Name="body" Grid.Column="0" Focusable="False" HorizontalAlignment="Stretch" ContentTemplate="{StaticResource chevTemplate}" />
        <!--<ContentControl x:Name="tail" Grid.Column="0" Focusable="False" HorizontalAlignment="Stretch" Grid.ColumnSpan="3" ContentTemplate="{StaticResource chevTailTemplate}" Content="{Binding Path=InputConnector}" />
        <ContentControl x:Name="head" Grid.Column="0" Focusable="False" HorizontalAlignment="Stretch" Grid.ColumnSpan="3" ContentTemplate="{StaticResource chevHeadTemplate}" Content="{Binding Path=OutputConnector}" />-->
    </Grid>
</UserControl>
