<UserControl x:Class="MVVMNodeEditor.Controls.Tail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:utility="clr-namespace:MVVMNodeEditor.Utility"
             x:Name="tailControl"
             d:DesignHeight="300"
             d:DesignWidth="300"
             LayoutUpdated="OnLayoutUpdated"
             mc:Ignorable="d">
    <Grid>
        <Path Fill="{Binding Path=Fill, ElementName=tailControl}" Stroke="Transparent">
            <Path.Data>
                <PathGeometry Figures="{utility:MultiBinder {Binding Path=ChevAngle, ElementName=tailControl}, {Binding Path=ChevWidth, ElementName=tailControl}, {Binding Path=ChevHeight, ElementName=tailControl}, {StaticResource ChevTailConverter}}" />
            </Path.Data>
            <!--<Path.Effect>
                <DropShadowEffect Opacity="0.2"
                                  BlurRadius="3" Direction="0" ShadowDepth="3"
                                  Color="White" />
            </Path.Effect>-->
        </Path>
    </Grid>
</UserControl>