<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:operation="clr-namespace:MVVMNodeEditor.ViewModel.Operation" >

    <DataTemplate DataType="{x:Type operation:QOperationViewModel}">
        <Grid x:Name="xgrid" Background="Firebrick" Margin="20,0,20,0">
            <TextBlock Text="{Binding Path=Name}"/>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type operation:TOperationViewModel}">
        <Grid x:Name="xgrid" Background="ForestGreen" Margin="20,0,20,0">
            <TextBlock Text="{Binding Path=Name}" />
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type operation:YOperationViewModel}">
        <Grid x:Name="xgrid" Background="Tomato" Margin="20,0,20,0">
            <TextBlock Text="{Binding Path=Name}" />
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type operation:ZOperationViewModel}">
        <Grid x:Name="xgrid" Background="SteelBlue" Margin="20,0,20,0" Height="300" Width="300">
            <TextBlock Text="{Binding Path=Name}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>